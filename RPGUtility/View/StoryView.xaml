<UserControl x:Class="RPGUtility.View.StoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RPGUtility.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="#FBF6E2">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        
        <Button Grid.Column="1" Grid.Row="1" Content="Cofnij" Background="Black" Foreground="White" BorderBrush="Black" Command="{Binding NavigateBackCommand}">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="15"/>
                </Style>
            </Button.Resources>
        </Button>
        <TextBlock  Grid.Column="3" Grid.ColumnSpan="4" Grid.Row="1" Grid.RowSpan="3" Text="{Binding Name}" FontSize="54" FontWeight="Bold"/>
        <TextBlock  Grid.Column="1"  Grid.ColumnSpan="4" Grid.Row="4" Text="{Binding GameMaster}" FontSize="26" FontWeight="SemiBold"/>
        <TextBlock  Grid.Column="1"   Grid.ColumnSpan="4" Grid.Row="5" Text="{Binding Year}" FontSize="26" FontWeight="SemiBold"/>

        <Border Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="10" Grid.RowSpan="8" Background="#E7DDB3">
            <Border.Resources>
            </Border.Resources>
        </Border>
        <ScrollViewer Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="9" Grid.RowSpan="8">
            <TextBlock TextWrapping="Wrap" FontSize="32" Text="{Binding Description}"/>
        </ScrollViewer>

        <Expander BorderBrush="AliceBlue" BorderThickness="2" Grid.Column="6"  Grid.ColumnSpan="4" Grid.Row="0" Grid.RowSpan="14" ExpandDirection="Left" >
            <StackPanel Background="Gray" >
        <TextBlock Text="Sidebar content" FontSize="24" Margin="10" />
        <ListBox ItemsSource="{Binding Items}" Margin="10" Width="180">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <Image Source="/WpfApp1;component/Resources/Item.png" Width="16" Height="16" Margin="5,0,5,0" />
                        <TextBlock Text="{Binding}" Margin="0,0,5,0" />
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>

        </Expander>
    </Grid>
</UserControl>
